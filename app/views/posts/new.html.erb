<%= form_for @post do |f| %>

  <%= f.fields_for :beer, @beer do |beer| %>
    <%= beer.label :name %>
    <%= beer.text_field :name %>
    <br>
    <%= beer.label :style %>
    <%= beer.collection_select(:style, Beer.styles, :itself, :itself) %>
    <br>
    <%= beer.label :abv %>
    <%= beer.text_field :abv %>
    <br>

    <%= f.fields_for :brewery, @brewery do |brewery| %>

      <%= brewery.label :name %>
      <%= brewery.text_field :name %>
      <%= brewery.label :city %>
      <%= brewery.text_field :city %>
      <%= brewery.label :state %>
      <%= brewery.text_field :state %>

    <% end %>
  <% end %>



  <%= f.label :description %>
  <%= f.text_area :description %><br>
  <%= f.submit %>
<% end %>
