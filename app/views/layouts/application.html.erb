<!DOCTYPE html>
<html>
  <head>
    <title>Libeery</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>

    <div class="header">

    <h1>Libeery</h1>
    <div >
      <%= link_to "Beer!", beers_path %>
    </div>
    <div>
    <% if get_logged_in_user %>
      <%= link_to "Profile", user_path(get_logged_in_user) %>
      <%= link_to "Logout", login_path, method: 'delete' %>
    <% end %>
    </div>
    <hr>
  </div>

    <%= yield %>
  </body>
</html>
